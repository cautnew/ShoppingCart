<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:label="Lançar abastecimento"
    tools:context=".lancAbast">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/txtKm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Kilometragem"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/txtLitros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Litros adicionados"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/txtVal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Valor pago"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/txtComb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nenhum combustível escolhido ainda"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnPickComb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="Escolher o combustível"
            android:textColor="@android:color/background_light" />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Incluir" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>